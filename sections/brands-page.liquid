{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }

    .page-width{
     padding-left: 0px;
    padding-right: 0px;
  }

    .az-filter {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      margin-bottom: 2rem;
      justify-content: center;
    }
    .az-btn {
      float: left;
      border: none;
      outline: none;
      cursor: pointer;
      border-radius: .5rem;
      padding: 10px 10px;
      transition: 0.3s;
      font-size: 20px;
      background: #ffffff;
    }

    .btn {
      border: none;
      background: none;
      font-size: larger;
    }
    .az-btn.active, .az-btn:hover {
      background: #205c40;
      color: #fff;
    }
    .brands-grid {
      display: grid;
      grid-template-columns: repeat({{ section.settings.columns }}, 1fr);

      /* align-items: start; Removed to allow stretching */
    }
    .brand-group {

      border-bottom: 1px solid #b8b8b8;
      padding-bottom: 1rem;
      height: 100%; /* Ensure it fills the grid cell */
      display: flex;
      flex-direction: column;
    }
    .brands-letter {
      font-weight: bold;
      margin-bottom: 1rem;
      color: #333;
      font-size: 1.5em;
      border-bottom: 1px solid #eee;
      padding-bottom: 0.5rem;
    }
    .brand-item {
      display: block;
      padding: 0.5rem 0;
      text-align: left;
      transition: all 0.2s;
      color: inherit;
      text-decoration: none;
    }
    .brand-item:hover {
      color: #205c40;
      padding-left: 5px;
    }
{%- endstyle -%}

<div class="page-width section-{{ section.id }}-padding">
  <h1 class="main-page-title page-title h0{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
    Shop by brand
  </h1>
  <div class="az-filter" id="azFilter">
    <button class="az-btn active" data-letter="all">View All</button>
    {% for i in (0..25) %}
      {% assign letter = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ' | slice: i %}
      <button class="az-btn" data-letter="{{ letter }}">{{ letter }}</button>
    {% endfor %}
  </div>

  <div class="brands-grid" id="brandsContainer">
    {% assign current_letter = '' %}
    {% assign vendors_sorted = shop.vendors | sort_natural %}
    {% assign current_group_html = '' %}

    {% for vendor in vendors_sorted %}
      {% assign first_letter = vendor | slice: 0, 1 | upcase %}

      {% if first_letter != current_letter %}
        {% if current_letter != '' %}
          <div class="brand-group" data-letter="{{ current_letter }}">
            <h3 class="brands-letter">{{ current_letter }}</h3>
            {{ current_group_html }}
          </div>
        {% endif %}

        {% assign current_letter = first_letter %}
        {% assign current_group_html = '' %}
      {% endif %}

      {% capture link_html %}
      <a href="/collections/all/{{ vendor | handleize }}" class="brand-item link">
        {{- vendor -}}
        {%- if section.settings.show_count %}
          {%- assign vendor_handle = vendor | handleize -%}
          {%- assign vendor_collection = collections[vendor_handle] -%}
          {%- if vendor_collection != empty -%}
            <span class="count">({{ vendor_collection.all_products_count }})</span>
          {%- endif -%}
        {% endif -%}
      </a>
      {% endcapture %}
      {% assign current_group_html = current_group_html | append: link_html %}
    {% endfor %}

    {% if current_letter != '' %}
      <div class="brand-group" data-letter="{{ current_letter }}">
        <h3 class="brands-letter">{{ current_letter }}</h3>
        {{ current_group_html }}
      </div>
    {% endif %}
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const filterBtns = document.querySelectorAll('.az-btn');
    const brandGroups = document.querySelectorAll('.brand-group');

    filterBtns.forEach((btn) => {
      btn.addEventListener('click', () => {
        // Remove active class from all buttons
        filterBtns.forEach((b) => b.classList.remove('active'));
        // Add active class to clicked button
        btn.classList.add('active');

        const letter = btn.dataset.letter;

        brandGroups.forEach((group) => {
          if (letter === 'all') {
            group.style.display = 'block';
          } else {
            const groupLetter = group.dataset.letter;
            if (groupLetter === letter) {
              group.style.display = 'block';
            } else {
              group.style.display = 'none';
            }
          }
        });
      });
    });
  });
</script>

{% schema %}
{
  "name": "Brands Page",
  "tag": "section",
  "class": "brands-section",
  "settings": [
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    },
    {
      "type": "header",
      "content": "Brands"
    },
    {
      "type": "range",
      "id": "columns",
      "min": 1,
      "max": 6,
      "step": 1,
      "label": "Grid columns",
      "default": 5
    },
    {
      "type": "checkbox",
      "id": "show_count",
      "label": "Show product count",
      "default": false
    }
  ],
  "presets": [{ "name": "Brands Page" }]
}
{% endschema %}
