{% comment %}
  Renders a header search with category filter dropdown
  
  Usage:
  {% render 'header-search-with-filter',
    default_text: 'All',
    placeholder_text: 'Search products...'
  %}
{% endcomment %}

{%- liquid
  assign default_text = default_text | default: 'All'
  assign placeholder_text = placeholder_text | default: 'Search products...'
-%}

<div class="header-search-filter">
  <form action="{{ routes.search_url }}" method="get" role="search" class="header-search-filter__form">
    <div class="header-search-filter__wrapper">
      <!-- Category Dropdown -->
      <div class="custom-select">
        <button class="custom-select__btn" type="button" aria-expanded="false" aria-haspopup="listbox" id="category-filter-button">
          <span class="custom-select__text">{{ default_text }}</span>
          <svg width="20" height="20" viewBox="0 0 24 24" class="custom-select__icon" role="presentation" focusable="false" aria-hidden="true">
            <path d="M20 8.5 12.5 16 5 8.5" stroke="currentColor" stroke-width="1.5" fill="none"></path>
          </svg>
        </button>
        <ul class="custom-select__listbox" role="listbox" tabindex="-1" aria-hidden="true" hidden>
          <li class="custom-select__option" role="option" data-value="">
            <span>{{ default_text }}</span>
          </li>
          {%- comment -%}
            Get all collections that have the metafield enabled
            Metafield: namespace = "search_filter", key = "show_in_filter"
          {%- endcomment -%}
          {%- assign sorted_collections = collections | sort: 'title' -%}
          {%- for collection in sorted_collections -%}
            {%- comment -%} Check if collection should appear in filter {%- endcomment -%}
            {%- assign show_in_filter = collection.metafields.search_filter.show_in_filter -%}
            {%- comment -%} If metafield not set or is true, show the collection {%- endcomment -%}
            {%- if show_in_filter == blank or show_in_filter == true -%}
              {%- if collection.handle != 'all' and collection.all_products_count > 0 -%}
                <li class="custom-select__option" role="option" data-value="{{ collection.handle | escape }}" data-type="collection">
                  <span>{{ collection.title | escape }}</span>
                </li>
              {%- endif -%}
            {%- endif -%}
          {%- endfor -%}
        </ul>
        <input type="hidden" name="q" id="category-filter-input" value="">
      </div>

      <!-- Search Input -->
      <div class="header-search-filter__input-wrapper">
        <input
          type="search"
          name="q"
          class="header-search-filter__input"
          placeholder="{{ placeholder_text }}"
          aria-label="Search"
          autocomplete="off"
        >
      </div>

      <!-- Search Button -->
      <button type="submit" class="header-search-filter__submit" aria-label="Search">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8"></circle>
          <path d="m21 21-4.35-4.35"></path>
        </svg>
      </button>
    </div>
  </form>
</div>

<script src="{{ 'header-search-filter.js' | asset_url }}" defer="defer"></script>
