{% comment %}
  Renders a header search with category filter dropdown
  
  Usage:
  {% render 'header-search-with-filter',
    default_text: 'All',
    placeholder_text: 'Search products...',
    collection_list: section.settings.collection_list (optional - comma separated handles)
  %}
{% endcomment %}

{%- liquid
  assign default_text = default_text | default: 'All'
  assign placeholder_text = placeholder_text | default: 'Search products...'
  
  comment
    If collection_list is provided, use it. Otherwise try to detect from navigation or use empty
  endcomment
  
  if collection_list == blank
    assign collection_list = ''
  endif
-%}

<div class="header-search-filter">
  <form action="{{ routes.search_url }}" method="get" role="search" class="header-search-filter__form">
    <div class="header-search-filter__wrapper">
      <!-- Category Dropdown -->
      <div class="custom-select">
        <button class="custom-select__btn" type="button" aria-expanded="false" aria-haspopup="listbox" id="category-filter-button">
          <span class="custom-select__text">{{ default_text }}</span>
          <svg width="20" height="20" viewBox="0 0 24 24" class="custom-select__icon" role="presentation" focusable="false" aria-hidden="true">
            <path d="M20 8.5 12.5 16 5 8.5" stroke="currentColor" stroke-width="1.5" fill="none"></path>
          </svg>
        </button>
        <ul class="custom-select__listbox" role="listbox" tabindex="-1" aria-hidden="true" hidden>
          <li class="custom-select__option" role="option" data-value="">
            <span>{{ default_text }}</span>
          </li>
          {%- comment -%}
            Dynamically populate collections from multiple sources:
            1. From navigation menu (linklists)
            2. From provided collection_list parameter
            3. From common collection handles as fallback
          {%- endcomment -%}
          
          {%- assign added_collections = '' -%}
          
          {%- comment -%} Strategy 1: Get from main navigation menu {%- endcomment -%}
          {%- if linklists.main-menu.links.size > 0 -%}
            {%- for link in linklists.main-menu.links -%}
              {%- if link.type == 'collection_link' -%}
                {%- assign collection = link.object -%}
                {%- if collection.id != blank -%}
                  {%- assign collection_key = collection.handle | append: '|' -%}
                  {%- unless added_collections contains collection_key -%}
                    {%- assign show_in_filter = collection.metafields.search_filter.show_in_filter -%}
                    {%- if show_in_filter == blank or show_in_filter == true -%}
                      {%- if collection.all_products_count > 0 -%}
                        <li class="custom-select__option" role="option" data-value="{{ collection.handle | escape }}" data-type="collection">
                          <span>{{ collection.title | escape }}</span>
                        </li>
                        {%- assign added_collections = added_collections | append: collection_key -%}
                      {%- endif -%}
                    {%- endif -%}
                  {%- endunless -%}
                {%- endif -%}
              {%- endif -%}
              
              {%- comment -%} Check nested menu links {%- endcomment -%}
              {%- if link.links.size > 0 -%}
                {%- for child_link in link.links -%}
                  {%- if child_link.type == 'collection_link' -%}
                    {%- assign collection = child_link.object -%}
                    {%- if collection.id != blank -%}
                      {%- assign collection_key = collection.handle | append: '|' -%}
                      {%- unless added_collections contains collection_key -%}
                        {%- assign show_in_filter = collection.metafields.search_filter.show_in_filter -%}
                        {%- if show_in_filter == blank or show_in_filter == true -%}
                          {%- if collection.all_products_count > 0 -%}
                            <li class="custom-select__option" role="option" data-value="{{ collection.handle | escape }}" data-type="collection">
                              <span>{{ collection.title | escape }}</span>
                            </li>
                            {%- assign added_collections = added_collections | append: collection_key -%}
                          {%- endif -%}
                        {%- endif -%}
                      {%- endunless -%}
                    {%- endif -%}
                  {%- endif -%}
                {%- endfor -%}
              {%- endif -%}
            {%- endfor -%}
          {%- endif -%}
          
          {%- comment -%} Strategy 2: Use provided collection_list parameter {%- endcomment -%}
          {%- if collection_list != blank -%}
            {%- assign handles_array = collection_list | split: ',' -%}
            {%- for handle in handles_array -%}
              {%- assign clean_handle = handle | strip -%}
              {%- assign collection = collections[clean_handle] -%}
              {%- if collection.id != blank -%}
                {%- assign collection_key = collection.handle | append: '|' -%}
                {%- unless added_collections contains collection_key -%}
                  {%- assign show_in_filter = collection.metafields.search_filter.show_in_filter -%}
                  {%- if show_in_filter == blank or show_in_filter == true -%}
                    {%- if collection.all_products_count > 0 -%}
                      <li class="custom-select__option" role="option" data-value="{{ collection.handle | escape }}" data-type="collection">
                        <span>{{ collection.title | escape }}</span>
                      </li>
                      {%- assign added_collections = added_collections | append: collection_key -%}
                    {%- endif -%}
                  {%- endif -%}
                {%- endunless -%}
              {%- endif -%}
            {%- endfor -%}
          {%- endif -%}
        </ul>
        <input type="hidden" name="q" id="category-filter-input" value="">
      </div>

      <!-- Search Input -->
      <div class="header-search-filter__input-wrapper">
        <input
          type="search"
          name="q"
          class="header-search-filter__input"
          placeholder="{{ placeholder_text }}"
          aria-label="Search"
          autocomplete="off"
        >
      </div>

      <!-- Search Button -->
      <button type="submit" class="header-search-filter__submit" aria-label="Search">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8"></circle>
          <path d="m21 21-4.35-4.35"></path>
        </svg>
      </button>
    </div>
  </form>
</div>

<script src="{{ 'header-search-filter.js' | asset_url }}" defer="defer"></script>
